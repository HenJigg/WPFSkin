<Window
    x:Class="WPFSkin.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WPFSkin"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:skin="clr-namespace:NativeSkin;assembly=NativeSkin"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid Background="{skin:SkinResource ResourceKey=ContentBackground}">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Button
            Width="100"
            Height="30"
            Margin="5"
            HorizontalAlignment="Right"
            Click="OnClick"
            Content="切换" />
        <StackPanel />

        <StackPanel
            Grid.Row="1"
            Margin="5"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Orientation="Horizontal">
            <Button
                Width="100"
                Height="30"
                Content="按钮" />

            <CheckBox
                Margin="10,0"
                VerticalAlignment="Center"
                Content="选择框" />

        </StackPanel>
    </Grid>
</Window>
